{{template "unit" .}}

{{define "css"}}
    
{{end}}


{{define "page-title"}}
   <div style="text-align: center;">
       Unit Details
   </div> 
{{end}}

{{define "content"}}

<div id="add-unit-to-property-page" class="basic-1 bg-gray">
    <div class="container">
        <div class="row">
            <div class="col">
                
                <form action="" method="" class="" validate>
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                    {{$unit := index .Data "unit"}}
                                        
                    <h2 class="text-center" style="padding-left: 6em;"></h2>

                    <div class="form-group mt-3">
                        <label for="property_id">Unit ID:</label>
                                                        
                        <input class="form-control disabled"
                               id="property_id" autocomplete="off" type='text'
                               name='property_id' value="{{$unit.ID}}" >
                    </div>

                    <div class="form-group">
                        <label for="unit_name">Unit Name</label>:</label>
                        
                        <input class="form-control"
                               id="unit_name" autocomplete="off" type='text'
                               name='unit_name' value="{{$unit.UnitName}}" >
                    </div>

                    <div class="form-group mt-3">
                        <label for="property_name">Property ID:</label>
                        
                        <input class="form-control"
                               id="property_name" autocomplete="off" type='text'
                               name='property_name' value="{{$unit.PropertyID}}">
                    </div>
                    
                    <hr>
                    <input type="submit" class="btn btn-primary" value="Submit">

                    <div class="float-right">
                        <a href="#!" class="btn btn-danger" onclick="window.history.go(-1)">Cancel</a>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>


{{end}}

{{define "js"}}
   
{{end}}